<h1>Create a Team and Heroes!</h1>
<form method="POST" action="/teams">
  <label for="team_name">Team Name:</label>
  <input type="text" id="team_name" name="team[name]"</input>
  <br>
  <label for="team_motto">Team Motto:</label>
  <input type="text" id="team_motto" name="team[motto]"</input>
  <br>
  <h1>Hero 1</h1>
  <label for="member1_name">Hero's Name:</label>
  <input type="text" id="member1_name" name="team[members][][name]"</input>
  <br>
  <label for="member1_power">Hero's Power:</label>
  <input type="text" id="member1_power" name="team[members][member1_power]"</input>
  <br>
  <label for="member1_bio">Hero's Biography:</label>
  <input type="text" id="member1_bio" name="team[members][][member1_bio]"</input>
  <br>
  <h1>Hero 2</h1>
  <label for="member2_name">Hero's Name:</label>
  <input type="text" id="member2_name" name="team[members][][member2_name]"</input>
  <br>
  <label for="member2_power">Hero's Power:</label>
  <input type="text" id="member2_power" name="team[members][member2_power]"</input>
  <br>
  <label for="member2_bio">Hero's Biography:</label>
  <input type="text" id="member2_bio" name="team[members][][member2_bio]"</input>
  <h1>Hero 3</h1>
  <label for="member3_name">Hero's Name:</label>
  <input type="text" id="member3_name" name="team[members][][member3_name]"</input>
  <br>
  <label for="member3_power">Hero's Power:</label>
  <input type="text" id="member3_power" name="team[members][member3_power]"</input>
  <br>
  <label for="member3_bio">Hero's Biography:</label>
  <input type="text" id="member3_bio" name="team[members][][member3_bio]"</input>
  <br>
  <br>
  <input type="submit" value="submit"</input>
</form>
